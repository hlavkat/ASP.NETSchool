@using ASP.NETSchool.ViewModels
@model LoginViewModel
<h3 class="text-center">Login</h3>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Login">
	<input type="hidden" asp-for="ReturnUrl" disabled />
	<div class="form-group mb-2 fw-bold">
		<label asp-for="Username"></label>
		<input type="text" asp-for="Username" class="form-control"/>
	</div>
	<div class="form-group mb-2 fw-bold">
		<label asp-for="Password"></label>
		<input type="password" asp-for="Password" class="form-control" />
	</div>
	<div class="form-group mb-2 fw-bold">
		<input type="checkbox" asp-for="Remember"/>
		<label asp-for="Remember"></label>
	</div>
	<button type="submit" class="btn btn-success mb-2">Log in</button>
</form>
