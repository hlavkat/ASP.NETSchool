@model IEnumerable<Student>

<h3 class="text-center mb-3">List of students</h3>
<div class="d-flex justify-content-end">
	@if (User.Identity.IsAuthenticated && User.IsInRole("Teacher") || User.IsInRole("Admin"))
	{
		<a class="btn btn-success my-2 buttonL" asp-action="Create">Add student</a>
	}
</div>
<div class="row">
		@foreach (var student in Model) {
			<div class="col-md-4 col-12 mb-2">
			<div class="border border-1 border-dark p-2 rounded-3  bg-warning bg-opacity-25">
					<h5 class="text-center">@student.FirstName @student.LastName</h5>
					<p>ID: @student.Id</p>
					<p>Date of Birth: @student.DateOfBirth.ToShortDateString()</p>
				@if (User.Identity.IsAuthenticated && User.IsInRole("Teacher") || User.IsInRole("Admin")) {
					<div class="d-flex justify-content-center">
						<a class="btn btn-warning mx-2" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
						<a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
					</div>			
				}
				</div>
			</div>
		}
</div>

