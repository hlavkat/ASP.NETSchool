@using ASP.NETSchool.ViewModels;
@model AppUser
<h3 class="text-center">Edit a user</h3>
<form asp-action="Edit">
	<div asp-validation-summary="All" class="text-danger"></div>
	<label class="fw-bold">User ID: @Model.Id</label>
	<div class="form-group">
		<label asp-for="UserName" class="fw-bold"></label>
		<input type="text" class="form-control bg-warning bg-opacity-50" asp-for="UserName" disabled/>
	</div>
	<div class="form-group">
		<label asp-for="Email" class="fw-bold"></label>
		<input type="email" class="form-control bg-warning bg-opacity-50" asp-for="Email" />
	</div>
	<div class="form-group">
		<label for="password" class="fw-bold">Password</label>
		<input name="password" type="text" class="form-control bg-warning bg-opacity-50" />
	</div>
	<input type="submit" value="Save changes" class="btn btn-success mt-3 buttonL" />
	<button class="button btn btn-warning mt-3 mx-3 buttonL" asp-action="Index">Back</button>
</form>